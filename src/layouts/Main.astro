---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>

<html dir="ltr" lang="en-US">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <meta http-equiv="x-ua-compatible" content="IE=edge" />

    <meta name="author" content="SemiColonWeb" />

    <meta
      name="description"
      content="Create Co-Working &amp; Co-Living Websites with Canvas Template. Get Canvas to build powerful websites easily with the Highly Customizable &amp; Best Selling Bootstrap Template, today."
    />

    <!-- Font Imports -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <!-- Core Style -->

    <link rel="stylesheet" href="style.css" />

    <!-- Font Icons -->

    <link rel="stylesheet" href="css/font-icons.css" />

    <!-- Niche page -->

    <link rel="stylesheet" href="page/coworking/coworking.css" />

    <!-- Custom CSS -->

    <link rel="stylesheet" href="css/custom.css" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />



    <title>{title}</title>
  </head>
<body class="stretched">
    <div id="wrapper">
        <main>
        <Header />
            <div class="content-wrapper">
                <slot />  
            </div>
        <Footer />
        </main>   
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <!-- JavaScripts

	============================================= -->

    <script src="/js/plugins.min.js" is:inline></script>

    <script src="/js/functions.bundle.js" is:inline></script>
 
</body>
</html>



